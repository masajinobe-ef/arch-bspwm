##---------- Keybindings for bspwm ----------##

# Terminal (kitty)
super + Return
	kitty

# Open application menu
super + r
	dmenu_run -fn 'JetbrainsMono Nerd Font-14'

# Lockscreen
super + l
    betterlockscreen -l -w ~/Pictures/Wallpaper/3.png --show-layout

##---------- Applications ----------##

# Launch Apps
super + {w,e,t,d,c}
	{chromium,thunar,telegram-desktop,discord,code}

##---------- System Keys ----------##

# Take a screenshot
Print
	sh $HOME/.local/bin/takeshot --now

# Take a screenshot to clipboard
super + shift + s
	sh $HOME/.local/bin/takeshot --clip

# Take screenshot of active window
ctrl + Print
	sh $HOME/.local/bin/takeshot --win

# Take screenshot of area
ctrl + shift + s
	sh $HOME/.local/bin/takeshot --area

# Manage brightness-kb
XF86KbdBrightness{Up,Down}
    sh $HOME/.local/bin/brightness-kb {up,down}

# Manage brightness
XF86MonBrightness{Up,Down}
    sh $HOME/.local/bin/brightness {up,down}

# Manage volume
XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%
XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%
XF86AudioMute
    pactl set-sink-mute 0 toggle

##---------- Bspwm ----------##

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Quit/Restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# Close & Kill app
super + {_,shift + }q
	bspc node -{c,k}

# Tiled or Monocle switch
super + s
	bspc desktop -l next

# Send the window to another edge of the screen
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Switch workspace
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# Focus the older node in the focus history
alt + Tab
	bspc wm -h off; \
	bspc node newer -f; \
	bspc wm -h on

# Focus the newer node in the focus history
super + Tab
	bspc wm -h off; \
	bspc node older -f; \
	bspc wm -h on

# Send focused window to another workspace
super + {_,shift + }{1-5}
	bspc {desktop -f,node -d} '^{1-5}'

# Expanding windows
super + control + {Left,Right,Up,Down}
	bspc node -z {left -40 0,right 40 0,top 0 -40,bottom 0 40}

## Shrinking windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left 40 0,right -40 0,top 0 40,bottom 0 -40}